<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="cc.cans.canscloud.demoappinsdk.MainActivity">

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="Hello World!" />

        <EditText
            android:id="@+id/edit_text_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/register"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:padding="16dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button_Call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_below="@+id/edit_text_phone_number"
            android:text="call" />

        <LinearLayout
            android:id="@+id/button_status_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_below="@+id/button_Call"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="register" />

            <Button
                android:id="@+id/button_unregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unRegister" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/misscall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/red_color"
        android:text="ddddddd"
        android:layout_gravity="right|bottom"/>

</RelativeLayout>